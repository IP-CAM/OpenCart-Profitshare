<?xml version="1.0" encoding="UTF-8"?><modification>    <id>Profitshare Pixel Integration and CSV generator</id>    <version>1.0.0</version>    <vqmver>2.x</vqmver>    <author>boian.ivanov44@gmail.com</author>    <!-- 1) PIXEL -->    <!-- Controller -->    <file name="catalog/controller/checkout/success.php">        <operation>            <search position="after"><![CDATA[if (isset($this->session->data['order_id'])) {]]></search>            <add><![CDATA[                 $protocol = stripos($_SERVER['SERVER_PROTOCOL'],'https') === true ? 'https://' : 'http://';                 $url = $protocol.$_SERVER[HTTP_HOST]."/index.php?route=module/profitshare/getPixel&order_id=".$this->session->data['order_id'];                 $json = file_get_contents($url, FILE_USE_INCLUDE_PATH);                 $data['profitshare_pixel'] = json_decode($json, true);                 ]]>            </add>        </operation>    </file>    <!-- View -->    <file name="catalog/view/theme/default/template/common/ordersuccesspage.tpl">        <operation>            <search position="before"><![CDATA[<div class='osp-content'>]]></search>            <add><![CDATA[                <?php echo $profitshare_pixel; ?>            ]]></add>        </operation>    </file>    <!-- 2) Retargeting -->    <!-- Product Page -->    <file name="catalog/controller/product/product.php">        <operation>            <search position="after"><![CDATA[if ($product_info) {]]></search>            <add><![CDATA[                $advertiser_code = '{advertiser_code}';                $product_id = $product_info['product_id'];                $price = $product_info['special'] ? round($product_info['special'], 2) : round($product_info['price'], 2);                $manufacturer_id = $product_info['manufacturer_id'];                $data['profitshare'] = "<script type=\"text/javascript\"> var _ps_tgt = {a: $advertiser_code, pc:$product_id, pp: $price, cc: $category_id, bc: $manufacturer_id}; </script><br /><script type=\"text/javascript\" src=\"//profitshare.bg/tgt/js\"></script>";            ]]></add>        </operation>    </file>    <file name="catalog/view/theme/fastor/template/product/product.tpl">        <operation>            <search position="after"><![CDATA[<?php echo $header;]]></search>            <add><![CDATA[                echo $profitshare;            ]]></add>        </operation>    </file>    <!-- Category Page -->    <file name="catalog/controller/product/category.php">        <operation>            <search position="after"><![CDATA[$category_id = (int)array_pop($parts);]]></search>            <add><![CDATA[                $advertiser_code = '{advertiser_code}';                $data['profitshare'] = "<script type=\"text/javascript\"> var _ps_tgt = {a: $advertiser_code, pc:'', pp: '', cc: $category_id, bc: ''}; </script><script type=\"text/javascript\" src=\"//profitshare.bg/tgt/js\"></script>";            ]]></add>        </operation>    </file>    <file name="catalog/view/theme/fastor/template/product/category.tpl">        <operation>            <search position="after"><![CDATA[<?php echo $header;]]></search>            <add><![CDATA[                echo $profitshare;            ]]></add>        </operation>    </file></modification>